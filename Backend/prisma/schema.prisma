generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  item        String
  quantidade  Int
  fornecedor  String
  precoc      Float
  precov      Float
  created_at  DateTime? @default(now())
  updated_at  DateTime? @updatedAt

  sales       Sale[]   @relation("CustomerSales")
  saleItems   SaleItem[] @relation("CustomerSaleItems")

  @@map("customers")
}

model Sale {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  totalQuantity   Int
  totalPrecov     Float
  precot          Float
  metodoPagamento String 
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now())

  customer        Customer @relation("CustomerSales", fields: [customerId], references: [id])
  customerId      String   @db.ObjectId
  items           SaleItem[] @relation("SaleItems")

  @@map("sales")
}

model SaleItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  saleId    String @db.ObjectId
  itemId    String @db.ObjectId
  quantidade Int
  precov    Float

  sale      Sale   @relation("SaleItems", fields: [saleId], references: [id])
  customer  Customer @relation("CustomerSaleItems", fields: [itemId], references: [id])
  
  @@map("sale_items")
}
