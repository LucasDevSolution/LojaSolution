generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  item String
  quantidade Int
  fornecedor String
  precoc Int
  precov Int
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  @@map("customers")
}

model Sale {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  itemId       String   // ID do item vendido
  item         String
  quantidade   Int
  preco        Int
  metodoPagamento String // Pode ser Dinheiro, Cartão de Crédito, Cartão de Débito ou PIX
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())

  @@map("sales")
}
