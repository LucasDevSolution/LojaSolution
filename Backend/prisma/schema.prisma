generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  item String
  quantidade Int
  fornecedor String
  precoc Float
  precov Float
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  @@map("customers")
}

model Sale {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  itemId       String   
  quantidade   Int
  precoc       Float
  precov       Float
  precot       Float
  metodoPagamento String 
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())

  @@map("sales")
}
